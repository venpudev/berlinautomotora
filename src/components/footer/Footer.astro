---
// --- DATA ---
const menuLinks = [
    { name: "Inicio", href: "/" },
    { name: "Nosotros", href: "/nosotros" },
    { name: "Catálogo", href: "/catalogo" },
    { name: "Contacto", href: "/contacto" }
];

const socialLinks = [
    {
        name: "Facebook",
        href: "https://web.facebook.com/profile.php?id=61552210761850",
        icon: "fab fa-facebook-f",
        target: "_blank"
    },
    {
        name: "Instagram",
        href: "https://www.instagram.com/berlinautomotora/",
        icon: "fab fa-instagram",
        target: "_blank"
    }
];

const contactInfo = [
    {
        type: "Dirección",
        value: "Alonso de Cordova 5727, Las Condes, Santiago, Chile",
        icon: "fas fa-map-marker-alt",
        link: "https://www.google.com/maps/search/?api=1&query=Alonso+de+Cordova+5727,+Las+Condes", // Link de Google Maps corregido
        isExternal: true
    },
    {
        type: "Teléfono",
        value: "+56 9 6336 1016", // Corregido para mejor lectura
        icon: "fas fa-phone",
        link: "tel:+56963361016",
        isExternal: false
    },
    {
        type: "Correo",
        value: "contacto@berlinautomotora.cl",
        icon: "fas fa-envelope",
        link: "mailto:contacto@berlinautomotora.cl",
        isExternal: false
    },
];
---

<footer class="bg-[#020617] text-white relative z-10">
    <div class="absolute inset-0 z-0" style={{ background: "radial-gradient(ellipse 80% 60% at 50% 0%, rgba(30, 64, 175, 0.15), transparent 70%), #020617" }} />
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 py-12 relative z-10">
        
        {/* REESTRUCTURADO PARA MEJOR RESPONSIVIDAD */}
        <div class="grid grid-cols-1 md:grid-cols-12 gap-8 text-center md:text-left">
            
            {/* Columna 1: Logo y Redes Sociales */}
            <div class="md:col-span-4 space-y-6 flex flex-col items-center md:items-start">
                <a href="/" class="flex items-center space-x-2">
                    <img class="h-10 w-auto" src="/logo-berlin.png" alt="Berlin Automotora">
                    <span class="text-2xl font-bold text-white">Berlin Automotora</span>
                </a>
                <div class="flex space-x-4">
                    {socialLinks.map((social) => (
                        <a href={social.href} class="w-10 h-10 bg-gray-800 rounded-full flex items-center justify-center hover:bg-red-600 transition-colors duration-200" aria-label={social.name} target={social.target} rel="noopener noreferrer">
                            <i class:list={[social.icon, "text-base text-white"]}></i>
                        </a>
                    ))}
                </div>
            </div>

            {/* Columna 2: Navegación */}
            <div class="md:col-span-4 lg:col-span-2">
                <h3 class="text-lg font-semibold mb-4">Navegación</h3>
                <ul class="space-y-2">
                    {menuLinks.map((link) => (
                        <li>
                            <a href={link.href} class="text-gray-400 hover:text-white transition-colors duration-200">
                                {link.name}
                            </a>
                        </li>
                    ))}
                </ul>
            </div>

            {/* Columna 3: Contacto */}
            <div class="md:col-span-4 lg:col-span-6">
                <h3 class="text-lg font-semibold mb-4">Contacto</h3>
                <div class="space-y-4">
                    {contactInfo.map((contact) => (
                        <div class="flex items-center justify-center md:justify-start space-x-3">
                            <div class="flex-shrink-0">
                                <i class:list={[contact.icon, "text-red-400"]}></i>
                            </div>
                            <div>
                                {contact.link ? (
                                    <a
                                        href={contact.link}
                                        target={contact.isExternal ? "_blank" : undefined}
                                        rel={contact.isExternal ? "noopener noreferrer" : undefined}
                                        class="text-gray-400 hover:text-white transition-colors duration-200"
                                    >
                                        {contact.value}
                                    </a>
                                ) : (
                                    <p class="text-gray-400">{contact.value}</p>
                                )}
                            </div>
                        </div>
                    ))}
                </div>
            </div>
        </div>

        <div class="border-t border-gray-800 mt-12 pt-6">
            <div class="text-center">
                <p class="text-gray-400 text-sm">© {new Date().getFullYear()} Berlin Automotora. Todos los derechos reservados.</p>
                <p class="text-gray-500 text-xs mt-2">
                    Diseño y desarrollo por
                    <a href="https://venpu.cl" target="_blank" class="text-red-400 hover:text-red-300 transition-colors duration-200 font-medium">
                        Venpu
                    </a>
                </p>
            </div>
        </div>
    </div>
</footer>