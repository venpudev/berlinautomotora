---
// Podrías pasar el número de teléfono como una prop si quieres hacerlo más dinámico
const { phone } = Astro.props;
const whatsappLink = `https://wa.me/${phone}?text=Hola,%20estoy%20interesado%20en%20el%20vehículo%20que%20vi%20en%20el%20sitio%20web.`;
---
<div class="fixed bottom-0 left-0 right-0 bg-white p-4 border-t border-gray-200 z-50 md:hidden">
  <a
    href={whatsappLink}
    target="_blank"
    rel="noopener noreferrer"
    class="w-full bg-green-500 text-white font-bold py-3 px-4 rounded-lg flex items-center justify-center text-center"
  >
    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
    </svg>
    Contactar por WhatsApp
  </a>
</div>